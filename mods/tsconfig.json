{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowUnusedLabels": false,
    "checkJs": true,
    "lib": ["es2015", "es2016.array.include", "es2017.object"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "./src",
    "outDir": "build",
  },
  "include": ["src"],
  "references": [
    { "path": "../dex" },
    { "path": "../sim" },
  ]
}
