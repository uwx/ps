{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "build",
    "composite": true,
    "paths": {
      "@pkmn/sim": ["./sim"],
      "@pkmn/dex": ["./dex"],
      "@pkmn/data": ["./data"],
      "@pkmn/mods": ["./mods"],
      "@pkmn/sets": ["./sets"],
      "@pkmn/types": ["./types"],
      "@pkmn/protocol": ["./protocol"],
      "@pkmn/client": ["./client"],
      "@pkmn/view": ["./view"],
      "@pkmn/img": ["./img"],
      "@pkmn/login": ["./login"],
      "@pkmn/randoms": ["./randoms"],
      "@pkmn/streams": ["./streams"],
    }
  }
}
