{
  "compilerOptions": {
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "tsBuildInfoFile": ".tsbuildinfo",
    "composite": true,
    "paths": {
      "@pkmn/sim/*": ["sim/*"],
      "@pkmn/dex/*": ["dex/*"],
      "@pkmn/data/*": ["data/*"],
      "@pkmn/mods/*": ["mods/*"],
      "@pkmn/sets/*": ["sets/*"],
      "@pkmn/types/*": ["types/*"],
      "@pkmn/protocol/*": ["protocol/*"],
      "@pkmn/client/*": ["client/*"],
      "@pkmn/view/*": ["view/*"],
      "@pkmn/img/*": ["img/*"],
      "@pkmn/login/*": ["login/*"],
      "@pkmn/randoms/*": ["randoms/*"],
      "@pkmn/streams/*": ["streams/*"],
    }
  },
  "references": [
    { "path": "./client" },
    { "path": "./data" },
    { "path": "./dex" },
    { "path": "./dex/types" },
    { "path": "./img" },
    { "path": "./integration" },
    { "path": "./login" },
    { "path": "./mods" },
    { "path": "./protocol" },
    { "path": "./randoms" },
    { "path": "./sets" },
    { "path": "./sim" },
    { "path": "./streams" },
    { "path": "./types" },
    { "path": "./view" }
  ]
}
